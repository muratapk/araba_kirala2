@model araba_kirala.Models.Brands
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>
<form asp-action="Edit" asp-controller="Brands" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="BrandID"/>
        <label>Marka Adı</label>
        <input type="text" asp-for="BrandName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input type="text" asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ModelYear"></label>
        <input type="text" asp-for="ModelYear" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DailyPrice"></label>
        <input type="text" asp-for="DailyPrice" class="form-control" />
    </div>
    <input type="submit" class="btn btn-secondary" value="Kaydet" />

</form>


@model List<araba_kirala.Models.Brands>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Create" asp-controller="Brands" class="btn btn-primary">Yeni</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Marka Adı</th>
            <th scope="col">Marka Modeli</th>
            <th scope="col">Marka Yılı</th>
            <th scope="col">Günlük Ücret</th>
            <th scope="col">Düzelt</th>
            <th scope="col">Sil</th>
        </tr>
    </thead>
    <tbody>
      @foreach(var item in Model)
        {
       <tr>
            <th scope="row">1</th>
            <td>@item.BrandName</td>
            <td>@item.Model</td>
            <td>@item.ModelYear</td>
            <td>@item.DailyPrice</td>
            <td><a asp-action="Edit" asp-controller="Brands" class="btn btn-warning"
                asp-route-id="@item.BrandID">Düzelt</a></td>
            <td><a asp-action="Delete" asp-controller="Brands" asp-route-id="@item.BrandID" class="btn btn-danger">Silme</a></td>
       </tr>
        }
      
        
    </tbody>
</table>
